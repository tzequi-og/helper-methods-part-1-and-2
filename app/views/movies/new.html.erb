<h1>New movie</h1>

<% @movie.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<div>
  <%= link_to "Go back", @movie %>
</div>

<hr>

<%= form_with(url: movies_path, data: { turbo: false }) do %>
  <div>
    <%= label_tag :title_box, "Title" %>

    <%= text_field_tag :query_title, @movie.title, { id: "title_box" } %>
  </div>

  <div>
    <%= label_tag :description_box, "Description" %>

    <%= text_area_tag :query_description, @movie.description, { rows: 3, id: "description_box" } %>

  </div>

  <%= button_tag "Create Movie"%>
<% end %>
